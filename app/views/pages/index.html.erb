<% if !user_signed_in? %>
<style>
body {
  background: linear-gradient(
rgba(0, 0, 0, 0.7),
rgba(0, 0, 0, 0.7)
), url("/bg.jpg") no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

h1 {
  color: white;
  font-weight: bold;
}

h3 {
  color: white;
  font-weight: bold;
}

.container-index {
  margin-left: 15%;
  margin-right: 15%;
  color: white;
  display: block;
}

.text {
  color: white;
  font-weight: heavy;
  font-size: 150%;
}

.log-in {
  float: right;
  width: 200px;
  height: 150px;
  margin-top: 7.5%;
  display: block;
}

.sign-up {
  float: right;
  width: 200px;
  height: 300px;
  display: block;
}

.sign-up {
  color: black;
  margin-left: -100px;
}

.sign-in-up {
  margin-left: 175px;
}


</style>
<div class="container-index row">
  <div class="col-sm-6">
  <h1>Welcome To Q&L </h1>
  <h3>Question and Lawyer </h3>

<p class="text">
  Get an answer to your legal problem in 4 lines or less!
</p>
  </div>

<div class="col-sm-6">

  <h5 class="sign-in-up">Sign In</h5>
  <div class="log-in panel">

    <%= form_for(:user, :url => session_path(:user)) do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
    <%= f.submit 'Sign in' %>
    <%= link_to "Forgot your password?", new_password_path(:user) %>
    <% end %>

  </div>
</div>

<div class="col-sm-6"></div>

<div class="col-sm-6">
  <h5 class="sign-in-up">Sign Up</h5>
  <div class="sign-up panel">
    <%= render :partial => 'devise/registrations/new_registration' %>
  </div>
</div>

</div>

<% else %>

<script> document.location = "/home" </script>

<% end %>
